<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paragon Lv"/>
    
    <TextView
        android:id="@+id/paragon_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5sp"
        android:textColor="#FF0000"
        android:text="266"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5sp"
        android:text="Killed"/>
    
    <TextView
        android:id="@+id/number_kill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5sp"
        android:textColor="#FF0000"
        android:text="50000"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5sp"
        android:text="Elite Killed"/>
    
    <TextView
        android:id="@+id/number_kill_elite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5sp"
        android:textColor="#FF0000"
        android:text="3000"/>

</LinearLayout>
