<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000000" >
     
     <RelativeLayout 
         android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_marginLeft="10dp"
         android:layout_marginTop="10dp"
     >

         <ImageView
             android:id="@+id/skill_icon"
             android:layout_width="64dp"
             android:layout_height="64dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:contentDescription="@string/icon_desc" />
         
         <TextView
	         android:id="@+id/skill_description"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_toRightOf="@+id/skill_icon"
	         android:layout_alignParentTop="true"
	         android:textColor="#FFFFFF"
	         android:layout_marginLeft="20dp"
	         android:textAppearance="?android:attr/textAppearanceMedium" />
         
         <TextView
	         android:id="@+id/skill_level"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_below="@+id/skill_description"
	         android:layout_alignParentRight="true"
	         android:textColor="#888888"	         
	         android:textAppearance="?android:attr/textAppearanceSmall" />
         
     </RelativeLayout>
     
     <RelativeLayout 
         android:id="@+id/rune_layout"
         android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_marginTop="20dp"
	     android:layout_marginLeft="10dp"
	     android:layout_marginBottom="20dp"
	 >
         
         <ImageView
             android:id="@+id/rune_icon"
             android:layout_width="64dp"
             android:layout_height="64dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:contentDescription="@string/icon_desc" />
         
         <TextView
	         android:id="@+id/rune_name"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_toRightOf="@+id/rune_icon"
	         android:layout_alignParentTop="true"
	         android:textColor="#F8FF41"
	         android:layout_marginLeft="20dp"
	         android:textAppearance="?android:attr/textAppearanceLarge" />
         
         <TextView
	         android:id="@+id/rune_description"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_toRightOf="@+id/rune_icon"
	         android:layout_below="@+id/rune_name"
	         android:textColor="#B8B371"
	         android:layout_marginTop="10dp"
	         android:layout_marginLeft="30dp"
	         android:textAppearance="?android:attr/textAppearanceMedium" />
         
         <TextView
	         android:id="@+id/rune_level"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_below="@+id/rune_description"
	         android:layout_alignParentRight="true"
	         android:textColor="#888888"	         
	         android:textAppearance="?android:attr/textAppearanceSmall" />
         
         
     </RelativeLayout>

     
    
</LinearLayout>