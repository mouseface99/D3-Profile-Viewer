<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.mf99.d3profileviewer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.mf99.d3profileviewer.HeroListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.mf99.d3profileviewer.HeroDetailActivity"
            android:label="@string/title_hero_detail"
            android:parentActivityName="net.mf99.d3profileviewer.HeroListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.mf99.d3profileviewer.HeroListActivity" />
        </activity>
    </application>

</manifest>
